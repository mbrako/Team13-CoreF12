@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Delete page";
}


<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Product.Id)

        <div class="form-group">
            <label asp-for="Product.SchoolName" class="control-label"></label>
            <input asp-for="Product.SchoolName" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.SchoolAddress" class="control-label"></label>
            <input asp-for="Product.SchoolAddress" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.SchoolContactInfo" class="control-label"></label>
            <input asp-for="Product.SchoolContactInfo" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Product.SchoolEmail" class="control-label"></label>
            <input asp-for="Product.SchoolEmail" class="form-control" disabled />
        </div>

        <h1>Confirm Delete of this item</h1>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}